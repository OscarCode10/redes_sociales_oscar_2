<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>
  <display-name>Entres tu redes</display-name>
  <welcom-file-list>
    <welcom-file>index.jsp </welcom-file>
  </welcom-file-list>

  <servlet>
    <servlet-name>Urls</servlet-name>
    <servlet-class>Urls</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Urls</servlet-name>
    <url-pattern>/urls</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>controller.Usuario</servlet-name>
    <servlet-class>controller.Usuario</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller.Usuario</servlet-name>
    <url-pattern>/usuario</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>controller.Comentario</servlet-name>
    <servlet-class>controller.Comentario</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller.Comentario</servlet-name>
    <url-pattern>/comentario</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>controller.Publicacion</servlet-name>
    <servlet-class>controller.Publicacion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller.Publicacion</servlet-name>
    <url-pattern>/publicacion</url-pattern>
  </servlet-mapping>

</web-app>

